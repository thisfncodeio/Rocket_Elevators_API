source 'https://rubygems.org'
git_source(:github) { |repo| "https://github.com/#{repo}.git" }

ruby '2.6.6'

# Figaro
gem 'figaro'

# For converting addresses to long/lat coords for the GoogleMaps API
gem 'geocoder'

# For JS
